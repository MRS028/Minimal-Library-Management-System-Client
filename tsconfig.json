{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": false,  // capitalization error ignore
    "strict": false,                            // strict checks off
    "skipLibCheck": true,                        // type declaration check skip
    "noEmitOnError": false,                      // errors থাকলেও build হবে
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
